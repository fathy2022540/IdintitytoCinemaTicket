@model ValidateOTPVM
@{
    ViewData["Title"] = "Validate OTP";
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden" style="max-width: 900px; width: 100%;">
        <div class="row g-0">

            <!-- Left Section -->
            <div class="col-md-5 bg-primary text-white d-flex flex-column justify-content-center align-items-center p-5">
                <div class="text-center">
                    <i class="bi bi-shield-lock display-3 mb-3"></i>
                    <h3 class="fw-bold">Email Verification</h3>
                    <p class="opacity-75">
                        Enter the 6-digit verification code we sent to your email.
                    </p>
                </div>
                <div class="mt-4">
                    <a asp-action="Login" asp-controller="Account" class="btn btn-light text-primary fw-semibold px-4">
                        <i class="bi bi-arrow-left-circle me-1"></i> Back to Login
                    </a>
                </div>
            </div>

            <!-- Right Section -->
            <div class="col-md-7 bg-light p-5">
                <h4 class="text-center text-md-start mb-4 text-primary">
                    🔐 Verify Your OTP Code
                </h4>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }
                else if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }

                <form asp-action="ValidateOtp" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="UserId" />

                    <div class="mb-4 text-center">
                        <label asp-for="OTP" class="form-label fw-semibold d-block mb-2">
                            Enter 6-digit code
                        </label>
                        <input asp-for="OTP"
                               class="form-control text-center fs-4 fw-bold tracking-widest"
                               maxlength="6"
                               placeholder="------"
                               style="letter-spacing: 10px; max-width: 250px; margin: 0 auto;" />
                        <span asp-validation-for="OTP" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold rounded-3">
                        <i class="bi bi-check2-circle me-1"></i> Verify OTP
                    </button>
                </form>

                <div class="text-center mt-4">
                    <p class="small text-muted">
                        Didn’t receive the code?
                        <a asp-action="ResendConfirmationEmail" asp-controller="Account" class="fw-semibold text-primary text-decoration-none">
                            Resend Email
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
