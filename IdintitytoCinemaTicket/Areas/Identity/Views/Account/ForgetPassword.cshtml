@model FrogetPasswordVm

@{
    ViewData["Title"] = "Forget Password";
    Layout = "~/Views/Shared/_Layout.cshtml"; // اختياري لو عندك Layout خاص بصفحات الـAuth
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden" style="max-width: 900px; width: 100%;">
        <div class="row g-0">
            <!-- Left Side (Info / Illustration) -->
            <div class="col-md-5 bg-primary text-white d-flex flex-column justify-content-center align-items-center p-5">
                <div class="text-center">
                    <i class="bi bi-shield-lock-fill display-3 mb-3"></i>
                    <h3 class="fw-bold">Forgot Password?</h3>
                    <p class="opacity-75">
                        Don’t worry! Enter your email and we’ll send you a secure link to reset your password.
                    </p>
                </div>
            </div>

            <!-- Right Side (Form) -->
            <div class="col-md-7 p-5 bg-light">
                <h4 class="mb-3 text-center text-md-start">🔐 Reset Access</h4>
                <p class="text-muted mb-4 text-center text-md-start">
                    Please provide your registered email address below.
                </p>

                <form asp-action="ForgetPassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                    <div class="mb-3">
                        <label asp-for="UserNameOrEmail" class="form-label fw-semibold">Email Address</label>
                        <input asp-for="UserNameOrEmail" class="form-control form-control-lg rounded-3"
                               placeholder="Enter your email..." />
                        <span asp-validation-for="UserNameOrEmail" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold rounded-3">
                        <i class="bi bi-envelope-check me-1"></i> Send Reset Link
                    </button>
                </form>

                <!-- Alerts -->
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success mt-4 text-center rounded-3 shadow-sm">
                        <i class="bi bi-check-circle-fill me-1"></i> @TempData["Success"]
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger mt-4 text-center rounded-3 shadow-sm">
                        <i class="bi bi-exclamation-triangle-fill me-1"></i> @TempData["Error"]
                    </div>
                }

                <div class="text-center mt-4">
                    <a asp-action="Login" class="text-decoration-none small">
                        <i class="bi bi-arrow-left"></i> Back to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
