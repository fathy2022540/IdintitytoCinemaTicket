@model LoginVm
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml"; // لو عندك Layout خاص بالـAuth pages
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden" style="max-width: 900px; width: 100%;">
        <div class="row g-0">
            <!-- Left Side (Intro) -->
            <div class="col-md-5 bg-primary text-white d-flex flex-column justify-content-center align-items-center p-5">
                <div class="text-center">
                    <i class="bi bi-person-circle display-3 mb-3"></i>
                    <h3 class="fw-bold">Welcome Back!</h3>
                    <p class="opacity-75">
                        Log in to manage your movies, cinemas, and categories efficiently.
                    </p>
                </div>
                <div class="mt-4">
                    <p class="small mb-0">Don't have an account?</p>
                    <a asp-action="Register" class="btn btn-light text-primary fw-semibold px-4 mt-2">
                        Create Account
                    </a>
                </div>
            </div>

            <!-- Right Side (Form) -->
            <div class="col-md-7 p-5 bg-light">
                <h4 class="mb-4 text-center text-md-start">🔐 Account Login</h4>

                <form asp-action="Login" method="post">
                    @Html.AntiForgeryToken()

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success rounded-3 shadow-sm">
                            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
                        </div>
                    }
                    else if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger rounded-3 shadow-sm">
                            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                        </div>
                    }

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Email or Username</label>
                        <input asp-for="UsernameOrEmail" class="form-control form-control-lg rounded-3" placeholder="Enter your email or username" />
                        <span asp-validation-for="UsernameOrEmail" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <label class="form-label fw-semibold">Password</label>
                            <a asp-action="ForgetPassword" class="small text-decoration-none">Forgot password?</a>
                        </div>
                        <input asp-for="Password" type="password" class="form-control form-control-lg rounded-3" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label small">Remember me</label>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold rounded-3">
                        <i class="bi bi-box-arrow-in-right me-1"></i> Log in
                    </button>
                </form>

                <!-- Divider -->
                <div class="position-relative my-4">
                    <hr />
                    <div class="divider-content-center text-muted small">or log in with</div>
                </div>

                <!-- External Logins -->
                <div class="d-flex gap-2">
                    <form asp-action="ExternalLogin" asp-route-provider="Google" method="post" class="w-50">
                        <button type="submit" class="btn btn-outline-danger w-100 py-2 rounded-3">
                            <i class="fab fa-google me-2"></i> Google
                        </button>
                    </form>
                    <form asp-action="ExternalLogin" asp-route-provider="Facebook" method="post" class="w-50">
                        <button type="submit" class="btn btn-outline-primary w-100 py-2 rounded-3">
                            <i class="fab fa-facebook-f me-2"></i> Facebook
                        </button>
                    </form>
                </div>

                <!-- Resend Email -->
                <div class="text-center mt-4">
                    <a asp-action="ResetConfirmationEmail" class="small text-decoration-none">
                        Didn’t receive confirmation email? <span class="fw-semibold text-primary">Resend</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
