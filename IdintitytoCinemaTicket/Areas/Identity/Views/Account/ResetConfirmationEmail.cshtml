@model ResetConfirmationEmailVM
@{
    ViewData["Title"] = "Resend Confirmation Email";
    Layout = "~/Views/Shared/_Layout.cshtml"; // استخدم الـ Layout الموحّد لو موجود
}

<div class="container d-flex align-items-center justify-content-center min-vh-100">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden" style="max-width: 900px; width: 100%;">
        <div class="row g-0">

            <!-- Left Section -->
            <div class="col-md-5 bg-info text-white d-flex flex-column justify-content-center align-items-center p-5">
                <div class="text-center">
                    <i class="bi bi-envelope-paper display-3 mb-3"></i>
                    <h3 class="fw-bold">Resend Confirmation</h3>
                    <p class="opacity-75">
                        Didn’t get your confirmation email?
                        No problem — we’ll send you another one right away 📧
                    </p>
                </div>
                <div class="mt-4">
                    <a asp-action="Login" class="btn btn-light text-info fw-semibold px-4">
                        <i class="bi bi-arrow-left-circle me-1"></i> Back to Login
                    </a>
                </div>
            </div>

            <!-- Right Section -->
            <div class="col-md-7 bg-light p-5">
                <h4 class="text-center text-md-start mb-4 text-primary">
                    🔄 Resend Confirmation Email
                </h4>

                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success">@TempData["Success"]</div>
                }
                else if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">@TempData["Error"]</div>
                }

                <form asp-action="ResendConfirmationEmail" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="UserNameOrEmail" class="form-label fw-semibold">
                            Email or Username
                        </label>
                        <input asp-for="UserNameOrEmail"
                               class="form-control form-control-lg"
                               placeholder="Enter your email or username" />
                        <span asp-validation-for="UserNameOrEmail" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2 fw-semibold rounded-3 mt-2">
                        <i class="bi bi-send-fill me-1"></i> Send Confirmation Link
                    </button>
                </form>

                <div class="text-center mt-4">
                    <a asp-action="Login" asp-controller="Account" class="text-decoration-none">
                        <i class="bi bi-box-arrow-in-left me-1"></i> Back to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
