@model IdintitytoCinemaTicket.ViewModel.MoviesVm

@{
    ViewData["Title"] = "Edit Movie";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 1200px;">
        <div class="card-header bg-primary text-white text-center rounded-top-4 py-3">
            <h2 class="mb-0">
                <i class="bi bi-pencil-square me-2"></i> Edit Movie
            </h2>
        </div>

        <div class="card-body bg-light p-4">
            <form asp-action="Edit" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Movie.Id" />

                <div class="row">
                    <!-- Left Column -->
                    <div class="col-md-6 border-end">
                        <!-- Movie Name -->
                        <div class="mb-3">
                            <label asp-for="Movie.Name" class="form-label fw-bold">
                                <i class="bi bi-film me-1 text-primary"></i> Movie Name
                            </label>
                            <input asp-for="Movie.Name" class="form-control shadow-sm" placeholder="Enter movie name" />
                            <span asp-validation-for="Movie.Name" class="text-danger"></span>
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            <label asp-for="Movie.Title" class="form-label fw-bold">
                                <i class="bi bi-card-text me-1 text-primary"></i> Description
                            </label>
                            <textarea asp-for="Movie.Title" class="form-control shadow-sm" rows="4" placeholder="Enter movie description"></textarea>
                            <span asp-validation-for="Movie.Title" class="text-danger"></span>
                        </div>

                        <!-- Price -->
                        <div class="mb-3">
                            <label asp-for="Movie.Price" class="form-label fw-bold">
                                <i class="bi bi-cash-coin me-1 text-primary"></i> Price
                            </label>
                            <input asp-for="Movie.Price" class="form-control shadow-sm" placeholder="Enter ticket price" />
                            <span asp-validation-for="Movie.Price" class="text-danger"></span>
                        </div>

                        <!-- Category -->
                        <div class="mb-3">
                            <label asp-for="Movie.CategoryId" class="form-label fw-bold">
                                <i class="bi bi-tags me-1 text-primary"></i> Category
                            </label>
                            <select asp-for="Movie.CategoryId"
                                    asp-items="@(new SelectList(Model.categories, "Id", "Name"))"
                                    class="form-select shadow-sm">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="Movie.CategoryId" class="text-danger"></span>
                        </div>

                        <!-- Cinema -->
                        <div class="mb-3">
                            <label asp-for="Movie.CinemaId" class="form-label fw-bold">
                                <i class="bi bi-building me-1 text-primary"></i> Cinema
                            </label>
                            <select asp-for="Movie.CinemaId"
                                    asp-items="@(new SelectList(Model.cinemas, "Id", "Name"))"
                                    class="form-select shadow-sm">
                                <option value="">-- Select Cinema --</option>
                            </select>
                            <span asp-validation-for="Movie.CinemaId" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Right Column -->
                    <div class="col-md-6">
                        <!-- Main Image -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                <i class="bi bi-image me-1 text-primary"></i> Current Main Image
                            </label><br />
                            @if (!string.IsNullOrEmpty(Model.Movie.MainImg))
                            {
                                <img src="~/assets/img/MovieMainImg/@Model.Movie.MainImg"
                                     alt="Main Image"
                                     class="img-fluid rounded-4 shadow-sm border"
                                     style="max-width: 250px; height: 300px; object-fit: cover;" />
                            }
                            else
                            {
                                <p class="text-muted fst-italic">No image available</p>
                            }

                            <div class="mt-2">
                                <label class="form-label fw-bold">Change Main Image</label>
                                <input type="file" name="MainImg" class="form-control shadow-sm" accept="image/*" />
                            </div>
                        </div>

                        <!-- Sub Images -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                <i class="bi bi-images me-1 text-primary"></i> Current Sub Images
                            </label><br />
                            @if (Model.SupImgs != null && Model.SupImgs.Any())
                            {
                                <div class="d-flex flex-wrap">
                                    @foreach (var img in Model.SupImgs)
                                    {
                                        <img src="~/assets/img/MovieSupImg/@img.Img"
                                             class="rounded m-1 shadow-sm border"
                                             style="width: 120px; height: 150px; object-fit: cover;" />
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted fst-italic">No sub images found</p>
                            }

                            <div class="mt-2">
                                <label class="form-label fw-bold">Replace Sub Images</label>
                                <input type="file" name="SupImg" multiple class="form-control shadow-sm" accept="image/*" />
                            </div>
                        </div>

                        <!-- Actors Images -->
                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                <i class="bi bi-people me-1 text-primary"></i> Current Actors Images
                            </label><br />
                            @if (Model.Actors != null && Model.Actors.Any())
                            {
                                <div class="d-flex flex-wrap">
                                    @foreach (var actor in Model.Actors)
                                    {
                                        <img src="~/assets/img/ActorsImg/@actor.ActorImg"
                                             class="rounded m-1 shadow-sm border"
                                             style="width: 120px; height: 150px; object-fit: cover;" />
                                    }
                                </div>
                            }
                            else
                            {
                                <p class="text-muted fst-italic">No actors images found</p>
                            }

                            <div class="mt-2">
                                <label class="form-label fw-bold">Replace Actors Images</label>
                                <input type="file" name="Actors" multiple class="form-control shadow-sm" accept="image/*" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-5 py-2 rounded-pill shadow-sm">
                        <i class="bi bi-save me-1"></i> Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-5 py-2 rounded-pill shadow-sm ms-2">
                        <i class="bi bi-arrow-left-circle me-1"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
