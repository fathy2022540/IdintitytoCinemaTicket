@model IdintitytoCinemaTicket.ViewModel.MoviesVm

@{
    ViewData["Title"] = "Add New Movie";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center rounded-top-4 py-3">
            <h2 class="mb-0"><i class="bi bi-film me-2"></i>Add New Movie</h2>
        </div>

        <div class="card-body bg-light p-4">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="row g-3">
                    <!-- Movie Name -->
                    <div class="col-md-6">
                        <label asp-for="Movie.Name" class="form-label fw-semibold">🎬 Movie Name</label>
                        <input asp-for="Movie.Name" class="form-control" placeholder="Enter movie name..." />
                        <span asp-validation-for="Movie.Name" class="text-danger"></span>
                    </div>

                    <!-- Title -->
                    <div class="col-md-6">
                        <label asp-for="Movie.Title" class="form-label fw-semibold">📝 Title</label>
                        <input asp-for="Movie.Title" class="form-control" placeholder="Enter movie title..." />
                        <span asp-validation-for="Movie.Title" class="text-danger"></span>
                    </div>

                    <!-- Price -->
                    <div class="col-md-6">
                        <label asp-for="Movie.Price" class="form-label fw-semibold">💵 Ticket Price</label>
                        <input asp-for="Movie.Price" type="number" step="0.01" class="form-control" placeholder="Enter price..." />
                        <span asp-validation-for="Movie.Price" class="text-danger"></span>
                    </div>

                    <!-- Status -->
                    <div class="col-md-6 d-flex align-items-center">
                        <div class="form-check form-switch">
                            <input asp-for="Movie.Status" class="form-check-input" />
                            <label asp-for="Movie.Status" class="form-check-label fw-semibold ms-2">Active Status</label>
                        </div>
                    </div>

                    <!-- Release Date -->
                    <div class="col-md-6">
                        <label asp-for="Movie.DateTime" class="form-label fw-semibold">📅 Release Date</label>
                        <input asp-for="Movie.DateTime" type="date" class="form-control" />
                        <span asp-validation-for="Movie.DateTime" class="text-danger"></span>
                    </div>

                    <!-- Category -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">🎭 Category</label>
                        <select asp-for="Movie.CategoryId" class="form-select">
                            <option value="">-- Select Category --</option>
                            @foreach (var cat in Model.categories)
                            {
                                <option value="@cat.Id">@cat.Name</option>
                            }
                        </select>
                        <span asp-validation-for="Movie.CategoryId" class="text-danger"></span>
                    </div>

                    <!-- Cinema -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">🏛 Cinema</label>
                        <select asp-for="Movie.CinemaId" class="form-select">
                            <option value="">-- Select Cinema --</option>
                            @foreach (var c in Model.cinemas)
                            {
                                <option value="@c.Id">@c.Name</option>
                            }
                        </select>
                        <span asp-validation-for="Movie.CinemaId" class="text-danger"></span>
                    </div>

                    <!-- Main Image -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">🌆 Main Movie Image</label>
                        <input type="file" name="MainImg" class="form-control" accept="image/*" />
                    </div>

                    <!-- Sub Images -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">🖼 Additional Images</label>
                        <input type="file" name="SupImg" multiple class="form-control" accept="image/*" />
                    </div>

                    <!-- Actor Images -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">⭐ Actors Images</label>
                        <input type="file" name="Actors" multiple class="form-control" accept="image/*" />
                    </div>
                </div>

                <div class="text-center mt-5">
                    <button type="submit" class="btn btn-success px-5 rounded-pill shadow-sm">
                        <i class="bi bi-check2-circle me-1"></i> Save Movie
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 ms-2 rounded-pill shadow-sm">
                        <i class="bi bi-arrow-left-circle me-1"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
