@model IdintitytoCinemaTicket.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 900px;">
        <div class="card-header bg-danger text-white text-center rounded-top-4 py-3">
            <h2 class="mb-0">
                <i class="bi bi-trash3-fill me-2"></i> Delete Movie
            </h2>
        </div>

        <div class="card-body bg-light p-4">
            <div class="alert alert-warning d-flex align-items-center">
                <i class="bi bi-exclamation-triangle-fill me-2 fs-4"></i>
                <div>
                    <strong>Warning:</strong> Are you sure you want to delete this movie?
                </div>
            </div>

            <div class="card mb-4 shadow-sm border-0">
                <div class="row g-0">
                    <!-- Movie Image -->
                    <div class="col-md-4 text-center p-3">
                        <img src="~/assets/img/MovieMainImg/@Model.MainImg"
                             alt="@Model.Name"
                             class="img-fluid rounded-3 shadow-sm border"
                             style="max-height: 300px; object-fit: cover;" />
                    </div>

                    <!-- Movie Info -->
                    <div class="col-md-8 p-4">
                        <h3 class="text-primary fw-bold">@Model.Name</h3>
                        <hr />
                        <p class="mb-2"><strong>🎟 Category:</strong> @Model.Category?.Name</p>
                        <p class="mb-2"><strong>🏛 Cinema:</strong> @Model.Cinema?.Name</p>
                        <p class="mb-2"><strong>📝 Description:</strong> @Model.Title</p>
                        <p class="mb-2"><strong>💵 Price:</strong> @Model.Price.ToString("C")</p>
                        <p class="mb-0"><strong>📅 Start Date:</strong> @Model.DateTime.ToShortDateString()</p>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 rounded-pill shadow-sm">
                        <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-danger px-4 py-2 rounded-pill shadow-sm">
                        <i class="bi bi-trash3-fill me-1"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
