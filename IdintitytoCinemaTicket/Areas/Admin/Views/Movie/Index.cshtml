@model IEnumerable<IdintitytoCinemaTicket.Models.Movie>

@{
    ViewData["Title"] = "Movies List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center rounded-top-4 py-3">
            <h2 class="mb-0">
                <i class="bi bi-film me-2"></i> Movies List
            </h2>

        </div>

        <div class="card-body bg-light p-4">
            <div class="text-end mb-3">
                <a asp-action="Create" class="btn btn-success px-4 py-2 rounded-pill shadow-sm">
                    <i class="bi bi-plus-circle me-1"></i> Add New Movie
                </a>
            </div>
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle shadow-sm bg-white rounded-3">
                        <thead class="table-dark text-center">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Status</th>
                                <th>Category</th>
                                <th>Cinema</th>
                                <th>Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody class="text-center">
                            @foreach (var movie in Model)
                            {
                                <tr>
                                    <td>@movie.Id</td>

                                    <td class="fw-bold">@movie.Name</td>
                                    <td class="text-success fw-semibold">@movie.Price.ToString("C")</td>

                                    <td>
                                        @if (movie.Status)
                                        {
                                            <span class="badge bg-success px-3 py-2">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary px-3 py-2">Inactive</span>
                                        }
                                    </td>

                                    <td>@movie.Category?.Name</td>
                                    <td>@movie.Cinema?.Name</td>
                                    <td>@movie.DateTime.ToShortDateString()</td>

                                    <td>
                                        <div class="d-flex justify-content-center gap-2">
                                            <a asp-action="Edit" asp-route-id="@movie.Id"
                                               class="btn btn-sm btn-warning rounded-pill px-3">
                                                <i class="bi bi-pencil-square"></i> Edit
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@movie.Id"
                                               class="btn btn-sm btn-danger rounded-pill px-3"
                                               onclick="return confirm('Are you sure you want to delete this movie?')">
                                                <i class="bi bi-trash"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center rounded-3 shadow-sm">
                    <i class="bi bi-info-circle me-1"></i> No movies found.
                </div>
            }
        </div>
    </div>
</div>
