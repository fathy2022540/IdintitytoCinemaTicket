@model IdintitytoCinemaTicket.Models.Cinema

@{
    ViewData["Title"] = "Add New Cinema";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 700px;">
        <div class="card-header bg-primary text-white text-center rounded-top-4 py-3">
            <h2 class="mb-0"><i class="bi bi-building-add me-2"></i>Add New Cinema</h2>
        </div>

        <div class="card-body bg-light p-4">
            <form asp-action="Create" method="post" enctype="multipart/form-data" novalidate>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold">
                        <i class="bi bi-film me-1 text-primary"></i> Cinema Name
                    </label>
                    <input asp-for="Name" class="form-control shadow-sm" placeholder="Enter cinema name" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Status" class="form-label fw-semibold">
                        <i class="bi bi-toggle-on me-1 text-primary"></i> Status
                    </label>
                    <select asp-for="Status" class="form-select shadow-sm">
                        <option value="true">Active</option>
                        <option value="false">Inactive</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-image me-1 text-primary"></i> Upload Image
                    </label>
                    <input type="file" name="Img" class="form-control shadow-sm" accept="image/*" />
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-4 py-2 rounded-pill shadow-sm">
                        <i class="bi bi-save2 me-1"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 rounded-pill ms-2 shadow-sm">
                        <i class="bi bi-arrow-left-circle me-1"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
