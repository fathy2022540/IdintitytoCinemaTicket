@model IdintitytoCinemaTicket.Models.Cinema

@{
    ViewData["Title"] = "Delete Cinema";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 750px;">
        <div class="card-header bg-danger text-white text-center rounded-top-4 py-3">
            <h2 class="mb-0">
                <i class="bi bi-trash3 me-2"></i> Delete Cinema
            </h2>
        </div>

        <div class="card-body bg-light text-center p-4">
            <div class="alert alert-warning shadow-sm rounded mb-4">
                <i class="bi bi-exclamation-triangle-fill text-warning me-2"></i>
                <strong>Are you sure you want to delete this cinema?</strong>
            </div>

            <div class="mb-4">
                @if (!string.IsNullOrEmpty(Model.Img))
                {
                    <img src="~/assets/img/cinemaImg/@Model.Img"
                         alt="Cinema Image"
                         class="img-fluid rounded-4 shadow-sm border"
                         style="max-height: 250px;" />
                }
                else
                {
                    <p class="text-muted fst-italic">No image available</p>
                }
            </div>

            <dl class="row justify-content-center text-start">
                <dt class="col-sm-3 fw-semibold">
                    <i class="bi bi-film me-1 text-danger"></i> Name:
                </dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3 fw-semibold">
                    <i class="bi bi-toggle-on me-1 text-danger"></i> Status:
                </dt>
                <dd class="col-sm-9">
                    @if (Model.Status)
                    {
                        <span class="badge bg-success px-3 py-2">
                            <i class="bi bi-check-circle me-1"></i> Active
                        </span>
                    }
                    else
                    {
                        <span class="badge bg-secondary px-3 py-2">
                            <i class="bi bi-x-circle me-1"></i> Inactive
                        </span>
                    }
                </dd>
            </dl>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-center gap-3">
                    <button type="submit" class="btn btn-danger px-4 py-2 rounded-pill shadow-sm">
                        <i class="bi bi-trash-fill me-1"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 rounded-pill shadow-sm">
                        <i class="bi bi-arrow-left-circle me-1"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
