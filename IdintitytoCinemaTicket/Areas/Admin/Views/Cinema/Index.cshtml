@model IEnumerable<IdintitytoCinemaTicket.Models.Cinema>

@{
    ViewData["Title"] = "Cinemas";
}

<div class="container my-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center rounded-top-4 py-3">
            <h2 class="mb-0"><i class="bi bi-building me-2"></i> Cinemas List</h2>
        </div>

        <div class="card-body bg-light">
            <div class="text-end mb-3">
                <a asp-action="Create" class="btn btn-success px-4 py-2 rounded-pill shadow-sm">
                    <i class="bi bi-plus-circle me-1"></i> Add New Cinema
                </a>
            </div>

            <table class="table table-hover align-middle text-center shadow-sm">
                <thead class="table-primary">
                    <tr>
                        <th>#</th>
                        <th><i class="bi bi-film me-1"></i> Cinema Name</th>
                        <th><i class="bi bi-toggle-on me-1"></i> Status</th>
                        <th><i class="bi bi-gear me-1"></i> Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var cinema in Model)
                        {
                            <tr>
                                <td>@cinema.Id</td>
                                <td class="fw-semibold">@cinema.Name</td>
                                <td>
                                    @if (cinema.Status)
                                    {
                                        <span class="badge bg-success px-3 py-2">
                                            <i class="bi bi-check-circle me-1"></i> Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger px-3 py-2">
                                            <i class="bi bi-x-circle me-1"></i> Inactive
                                        </span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@cinema.Id" class="btn btn-sm btn-outline-warning me-2 shadow-sm">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@cinema.Id" class="btn btn-sm btn-outline-danger shadow-sm">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">
                                <i class="bi bi-exclamation-circle fs-4 d-block mb-2"></i>
                                No cinemas found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
